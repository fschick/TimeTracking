{
  "name": "time-tracking",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:icons && npm run build:flags && ng serve",
    "start:nr": "npm run start -- --no-live-reload",
    "start:allip": "npm run start -- --host 0.0.0.0 --disable-host-check",
    "start:api": "dotnet run --project ../FS.TimeTracking/FS.TimeTracking/FS.TimeTracking.csproj",
    "build": "npm run build:icons && npm run build:flags && ng build --source-map=true",
    "build:watch": "npm run build -- --watch --configuration development",
    "build:icons": "node icon-generator/create-sprite.js icons",
    "build:flags": "node icon-generator/create-sprite.js flags",
    "lint": "ng lint",
    "cypress": "npx cypress open",
	"test": "npm run test:unit:headless && npm run test:e2e",
    "test:unit": "ng test --browsers=Chrome",
    "test:unit:headless": "npm run test:unit -- --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:cypress": "npx cypress run",
    "test:e2e": "start-server-and-test start:api http://localhost:5000/openapi/index.html start 4200 test:cypress"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/localize": "^14.2.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@ng-bootstrap/ng-bootstrap": "^13.0.0",
    "@ng-select/ng-select": "^9.0.2",
    "apexcharts": "^3.35.5",
    "bootstrap": "^5.2.0",
    "bootstrap-datepicker": "^1.9.0",
    "bootstrap-icons": "^1.9.1",
    "luxon": "^3.0.3",
    "ng-apexcharts": "^1.7.1",
    "ng-let": "^14.0.1",
    "ngx-toastr": "^15.0.0",
    "path-to-regexp": "^6.2.1",
    "rxjs": "~7.5.6",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.1",
    "@angular-eslint/builder": "14.0.3",
    "@angular-eslint/eslint-plugin": "14.0.3",
    "@angular-eslint/eslint-plugin-template": "14.0.3",
    "@angular-eslint/schematics": "14.0.3",
    "@angular-eslint/template-parser": "14.0.3",
    "@angular/cli": "^14.2.1",
    "@angular/compiler-cli": "^14.2.0",
    "@openapitools/openapi-generator-cli": "^2.5.1",
    "@types/bootstrap": "^5.2.3",
    "@types/jasmine": "~4.3.0",
    "@types/jquery": "^3.5.14",
    "@types/luxon": "^3.0.1",
    "@types/node": "^18.7.14",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "bootstrap-icons": "^1.9.1",
    "cypress": "^10.7.0",
    "eslint": "8.22.0",
    "jasmine-core": "~4.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "start-server-and-test": "^1.14.0",
    "svg-sprite": "^1.5.4",
    "typescript": "~4.6.4"
  }
}
